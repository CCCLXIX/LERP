<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="simple.lerp.ManageAccount"
    android:background="@drawable/background_account_management_2"
    android:id="@+id/account_management">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/imageView5"
        android:src="@drawable/initial_image"
        android:layout_above="@+id/user_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/user_name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/user_email"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/VerticalScrollView"
        android:layout_marginTop="320dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quizzes Taken:"
                android:id="@+id/quizzes_taken"
                android:layout_marginTop="34dp"
                android:textColor="#ffffffff"
                android:layout_below="@+id/user_email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/possible_q1"

                android:textColor="#ffb3ab26"
                android:textStyle="italic"
                android:layout_alignTop="@+id/quizzes_taken"
                android:layout_alignLeft="@+id/user_email"
                android:layout_alignStart="@+id/user_email"
                android:layout_marginLeft="180dp"
                android:onClick="PressedPossible1"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/possible_q2"
                android:textColor="#ffb3ab26"
                android:textStyle="italic"
                android:layout_below="@+id/possible_q1"
                android:layout_alignRight="@+id/possible_q1"
                android:layout_alignEnd="@+id/possible_q1"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:onClick="PressedPossible2"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/possible_q3"
                android:textColor="#ffb3ab26"
                android:textStyle="italic"
                android:layout_below="@+id/possible_q2"
                android:layout_alignLeft="@+id/possible_q2"
                android:layout_alignStart="@+id/possible_q2"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:onClick="PressedPossible3"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/possible_q4"
                android:textColor="#ffb3ab26"
                android:textStyle="italic"
                android:layout_below="@+id/possible_q2"
                android:layout_alignLeft="@+id/possible_q2"
                android:layout_alignStart="@+id/possible_q2"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:onClick="PressedPossible4"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/possible_q5"
                android:textColor="#ffb3ab26"
                android:textStyle="italic"
                android:layout_below="@+id/possible_q2"
                android:layout_alignLeft="@+id/possible_q2"
                android:layout_alignStart="@+id/possible_q2"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:onClick="PressedPossible5"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/possible_q6"
                android:textColor="#ffb3ab26"
                android:textStyle="italic"
                android:layout_below="@+id/possible_q2"
                android:layout_alignLeft="@+id/possible_q2"
                android:layout_alignStart="@+id/possible_q2"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:onClick="PressedPossible6"
                android:clickable="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="355dp"
                android:layout_height="30dp"
                android:text="Quiz Reset"
                android:id="@+id/button5"
                android:background="#ffd7d941"
                android:textStyle="italic"
                android:onClick="QuizReset"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/anouncement"
                android:layout_marginTop="60dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="In order to reset your test scores you must provide the quiz you want to reset and the password you created."
        android:id="@+id/anouncement"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_below="@+id/user_email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/quizz_number"
        android:hint="Quiz Number"
        android:textSize="14dp"
        android:background="#ffffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/anouncement"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_reset"
        android:hint="Password"
        android:background="#ffffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/quizz_number"
        android:layout_marginTop="1dp"
        android:textSize="14dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/Reset"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:onClick="QuizResetExecutor"
        android:layout_below="@+id/password_reset"
        android:layout_marginTop="20dp" />


</RelativeLayout>
